<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.english.english_vision.mapper.SongMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.english.english_vision.pojo.Song">
        <id column="id" property="id" />

        <result column="name" property="name" />
        <result column="introduction" property="introduction" />
        <result column="create_time" property="createTime" />

        <result column="pic" property="pic" />
        <result column="lyric" property="lyric" />
        <result column="url" property="url" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, singer_id, name, introduction, create_time, update_time, pic, lyric, url
    </sql>
    <select id="listbyName" resultType="com.english.english_vision.pojo.Song">
        select * from t_song where name like "%"#{name}"%"
    </select>


</mapper>
